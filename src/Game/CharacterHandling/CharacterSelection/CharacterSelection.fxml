<BorderPane stylesheets="@../../Backend/GUIDesign.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.CharacterHandling.CharacterSelection.CharacterSelectionController">
   <top>
      <MenuBar prefHeight="25.0" prefWidth="0.0" BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#closeProgram" text="Quit program" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <bottom>
      <AnchorPane prefHeight="27.0" prefWidth="739.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="682.0" layoutY="9.0" mnemonicParsing="false" onAction="#returnToMainMenu" text="Log out" />
            <Button layoutY="9.0" mnemonicParsing="false" onAction="#goToCharCreation" text="Create new character" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TilePane prefHeight="408.0" prefWidth="739.0" />
            <Label fx:id="showUsername" prefHeight="24.0" prefWidth="739.0">
